            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título do Projeto"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titulo_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnóstico e Monitoramento do Cancro Europeu das Pomáceas usando Visão Computacional e RFID."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/palavras_chave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Palavras-Chave"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/palavras_chave_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancro Europeu das Pomáceas; Neonectria ditissima; Visão Computacional; RFID."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/area_conhecimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
